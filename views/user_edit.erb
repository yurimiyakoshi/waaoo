<body>
 <h2>ユーザー編集</h2>
 
  <form action="/renew_user/<%= User.find(session[:user]).id %>" method="post">
   <p>ユーザーネーム：<input type="text" name="user_name" value="<%= User.find(session[:user]).user_name %>" required></p>
   <P>大学名：<input type="text" name="school" placeholder="<% current_user.university.school %>" value="<% current_user.university.school %>" required></p>
